name: Angular CI

on:
  push:
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install deps
        run: npm ci || npm install --legacy-peer-deps

      - name: Build (prod)
        # IMPORTANT: set your repo name below for base-href
        run: npx ng build --configuration=production --base-href "/YOUR_REPO_NAME/"
      
      - name: Upload dist as artifact
        uses: actions/upload-artifact@v4
        with:
          name: dist
          path: |
            dist/**
